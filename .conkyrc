conky.config={
  background=true,
  short_units=true,
  cpu_avg_samples=1,
  net_avg_samples=1,
  out_to_console=false,
  own_window=true,
  own_window_colour='#191816',
  own_window_transparent=false,
  own_window_hints='undecorated,below,sticky,skip_taskbar',
  own_window_type='desktop',

  font='8x12',
  use_xft=true,
  xftalpha=1.0,
  font='Overpass Mono:size=10',
  font1='Overpass Mono:bold:size=12',
  font2='Overpass Mono:bold:size=14',
  font3='Overpass Mono:bold:size=16',

  update_interval=1,
  double_buffer=true,

  minimum_width=350,

  draw_shades=false,
  draw_outline=false,
  draw_borders=false,
  stippled_borders=0,
  border_width=10,

  default_color='#e2e8d2',
  default_shade_color='white',
  default_outline_color='white',

  color1='#00b1d5',
  color2='#ff96ff',
  color3='#ff5433',
  color4='#d9711e',
  color5='#00ff97', 

  alignment='top_left',

  gap_x=20,
  gap_y=20,

  use_spacer='right',
  no_buffers=true,
  lowercase=true,

};

conky.text=[[
${font3}${color1}${alignc}${exec $HOME/.config/scripts/display_os}${font}${color}


location: 	${color3}${alignr}${execi 3600 curl -s ipinfo.io | grep "city" | awk -F '"' '{print $4}'}${color}
local time:	${color3}${alignr}${time %H:%M}${color}
${execpi 900 $HOME/.config/scripts/weather_updated}

${font1}${alignc}${color2}computer${color}${font}

${if_existing /sys/class/power_supply/BAT0/uevent}\
battery: ${alignr}${color3}${battery_bar 8,70 BAT0}${color}
#${execi 1000 acpi 2>/dev/null | grep -q . && echo "Battery: "}${execi 10 acpi -b 2>/dev/null | cut -d" " -f3,4 | sed 's/,$//'}
${endif}\
uptime:	${color3}${alignr}$uptime${color}
user:	${color3}${alignr}${exec echo $USER}${color}
wm:	${color3}${alignr}${exec $HOME/.config/scripts/display_wm}${color}
cpu:	${color3}${alignr}${cpu}%${color}
freq:	${color3}${alignr}${freq}${color}
free space:	${color3}${alignr}${fs_free /}${color}
network:    ${color3}${alignr}${execi 5 $HOME/.config/scripts/netiface}${color}
${if_match "$(nmcli -g device connection show --active | grep ^w)" == "w*"}Strength:    ${color3}${alignr}${execi 30 $HOME/.config/scripts/wifidotmeter}${color}${endif}
# ${alignc}${execi 1000 persist-enabled}\

${font1}${alignc}${color2}audio${color}${font}

output:	${color3}${alignr}${execi 10 $HOME/.config/scripts/active_audio_output}${color}
output volume:	${color3}${alignr}${execi 10 $HOME/.config/scripts/volume}${color}
${if_mpd_playing}\
mpd volume:	${color3}${alignr}${mpd_vol}%${color}
status:	${color3}${alignr}${mpd_status}${color}
artist:	${color3}${alignr}${mpd_artist}${color}
song:	${color3}${alignr}${mpd_title}${color}
album:	${color3}${alignr}${if_empty $mpd_album}n/a${else}${mpd_album}${endif}${color}
                               
${color4}${alignc}${mpd_bar 8,140}${color}${endif}
]];
